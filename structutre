src/
├── config/
│   ├── firebase.js       # Configuración de Firebase
│   ├── server.js         # Configuración básica del servidor
│   ├── token.js          # contiene token y palabra secreta para encriptar
│   └── config.js         # Funcion como un .env
├── controllers/
│   └── authController.js   # Controlador de autenticación
│   └── DriverController.js # Controlador de conductores
├── middlewares/
│   ├── authMiddleware.js # Middleware de autenticación JWT
│   └── corsMiddleware.js # Configuración de CORS
├── routes/
│   └── authRoutes.js     # Rutas de autenticación
├── services/
│   └── authService.js    # Lógica de negocio para autenticación
└── app.js                # Punto de entrada principal